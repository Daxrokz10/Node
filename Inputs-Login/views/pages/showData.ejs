<!doctype html>
<html lang="en">
<head>
    <title>Employee Data</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
        crossorigin="anonymous"
    />
</head>
<body>
<header>
    <%- include('../partials/header') %>
</header>

<main>
    <div class="container">
        <div class="row mt-3">
            <div class="col-md-10 mx-auto">
                <table class="table table-bordered table-responsive table-striped table-light table-hover caption-top text-center">
                    <caption><h3 class="text-center">Employee Data</h3></caption>
                    <thead>
                        <tr>
                            <th>Sr No</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Age</th>
                            <th>City</th>
                            <th>Gender</th>
                            <th>Hobby</th>
                            <th>Department</th>
                            <th>Salary</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% if(emp && emp.length) { %>
                            <% emp.map((value,index) => { 
                                let {id,fname,lname,age,city,gender,hobby,department,salary} = value;
                            %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= fname %></td>
                                    <td><%= lname %></td>
                                    <td><%= age %></td>
                                    <td><%= city %></td>
                                    <td><%= gender %></td>
                                    <td><%= hobby%></td>
                                    <td><%= department %></td>
                                    <td><%= salary %></td>
                                    <td class="d-flex gap-2 justify-content-center">
                                        <a href="/employee/delete/<%= id %>" class="btn btn-danger btn-sm">Delete</a>
                                        <a href="/employee/edit/<%= id %>" class="btn btn-warning btn-sm">Edit</a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="10">No Employees Found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

<footer></footer>

<script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"
></script>

<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
    integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
    crossorigin="anonymous"
></script>
</body>
</html>
