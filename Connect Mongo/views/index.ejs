<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Employee Management</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="p-4">
  <div class="card mb-4 p-4">
    <h4>Add Employee</h4>
    <form action="/add" method="POST" class="row g-3">
      <div class="col-md-4">
        <input type="text" class="form-control" placeholder="Name" name="name" required>
      </div>
      <div class="col-md-4">
        <input type="number" class="form-control" placeholder="age" name="age" required>
      </div>
      <div class="col-md-4">
        <input type="checkbox" class="form-control" value="Hiking" > Hiking
        <input type="checkbox" class="form-control" value="Movies" > Movies
        <input type="checkbox" class="form-control" value="Boxing" > Boxing
      </div>
      <div class="col-md-4">
        <input type="text" class="form-control" placeholder="Position" name="position" required>
      </div>
      <div class="col-md-12">
        <button class="btn btn-success" type="submit">Add</button>
      </div>
    </form>
  </div>

  <div class="card p-4">
    <h4>Employees</h4>
    <table class="table table-bordered mt-3">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Position</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(employee => { %>
          <tr>
            <td><%= employee.name %></td>
            <td><%= employee.email %></td>
            <td><%= employee.position %></td>
            <td>
              <form action="/delete/<%= employee._id %>" method="POST" style="display:inline;">
                <button class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
